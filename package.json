{
  "name": "neopos-electron",
  "version": "1.3.10-beta.1",
  "description": "Sistema de punto de venta con Electron, React y Tailwind CSS",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "craco start",
    "build": "craco build",
    "build-beta": "node increment-version.js && npm run build && npm run electron-build",
    "electron-build": "electron-builder --config electron-builder.json",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "react",
    "tailwind",
    "pos",
    "sqlite"
  ],
  "author": "NeoPOS Team",
  "license": "MIT",
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-rebuild": "^3.2.9",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "util": "^0.12.5",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "date-fns": "^2.30.0",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.542.0",
    "pdfkit": "^0.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.17.0",
    "react-scripts": "^5.0.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
