{
  "name": "neopos-electron",
  "version": "1.0.0",
  "description": "Sistema de punto de venta con Electron, React y Tailwind CSS",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "craco start",
    "build": "craco build",
    "electron-build": "electron-builder",
    "build-all": "npm run build && npm run electron-build",
    "rebuild": "electron-rebuild -f -w sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "tailwind",
    "pos",
    "sqlite"
  ],
  "author": "NeoPOS Team",
  "license": "MIT",
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-rebuild": "^3.2.9",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "util": "^0.12.5",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.17.0",
    "react-scripts": "^5.0.1",
    "sqlite3": "^5.1.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.neopos.app",
    "productName": "NeoPOS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main.js",
      "src/database/**/*",
      "node_modules/**/*"
    ]
  }
}
